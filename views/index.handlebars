<h1>Burgers!</h1>


<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
    <img id="hamburgerImg" src="http://fresh-spot.com/wp-content/uploads/2015/06/Hamburger.png" alt="hamburger.png">
      <li>
        {{this.burger_name}}

        <form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button class="eat" type="submit">EAT!</button>
        </form>
      </li>
    {{/unless}}
    <script type="text/javascript">

      $('#hamburgerImg').css('max-width', '100px').css('');

    </script>
  {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-update-form" action="/burgers/create" method="POST">

  <div class="form-group">
    <label >Burger Name:</label>
    <input type="text" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
