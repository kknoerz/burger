<div class="left col-md-4 col-md-offset-1">
  <ul class="not-eaten">
    <h2>Current Burgers</h2>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          <img class="hamburgerImg" src="http://fresh-spot.com/wp-content/uploads/2015/06/Hamburger.png" alt="hamburger.png">
          <p>
            {{this.burger_name}}
          </p>
        </li>
        <form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button class="eat" type="submit">EAT!</button>
        </form>
      {{/unless}}
    {{/each}}
    <h2>Add a Burger</h2>
    <form class="create-update-form" action="/burgers/create" method="POST">

      <div class="form-group">
        <label >Burger Name:</label>
        <input type="text" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </ul>
</div>

<div class="right col-md-4 col-md-offset-1">
  <ul class="eaten">
    <h2>Eaten Burgers</h2>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          <p>
            {{this.burger_name}}
          </p>
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>
